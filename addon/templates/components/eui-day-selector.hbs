<ol class="eui-day-selector--daysofweek">
  <li class="eui-nameofday">Sun</li>
  <li class="eui-nameofday">Mon</li>
  <li class="eui-nameofday">Tue</li>
  <li class="eui-nameofday">Wed</li>
  <li class="eui-nameofday">Thu</li>
  <li class="eui-nameofday">Fri</li>
  <li class="eui-nameofday">Sat</li>
</ol>

{{#with (hash 
  component=(or intervalComponent (component 'eui-interval'))
) as |defaults|}}

  <ol class="eui-day-selector--days">
    {{#each days as |day|}}

      {{#with (hash
          component=        defaults.component
          is-selected=      (moment-same selection day 'day')
          is-highlighted=   (or   (moment-between day start end) 
                                  (moment-same day start) 
                                  (moment-same day end)
                            )
          on-select=        (action 'selectDay')
          is-same-month=    (moment-same _month day 'month')
        ) as |interval|}}
        
        {{#if hasBlock}}
        
          {{yield day interval}}
          
        {{else}}
        
          {{#if interval.is-same-month}}
          
            {{interval.component day 'day' 
              is-selected=    interval.is-selected
              is-highlighted= interval.is-highlighted
              on-select=      interval.on-select
            }}
            
          {{else}}
          
            {{#interval.component day 'day' is-empty=true}}{{/interval.component}}
            
          {{/if}}
          
        {{/if}}
        
      {{/with}}
      
    {{/each}}
  </ol>

{{/with}}


